extends single

block content
  
      h2 Registro
      
      if error
        .alert.alert-error
          button.close.fui-cross(type="button",data-dismiss="alert")
          span #{error}
      
        
      form.register#login(method='post', action='/register')
        div.control-group
          label Email:
          input.span3(name='user[email]', value=user.email || '', type='text')

        div
          label Tu Nombre:
          input.span3(name='user[name]', value=user.name || '', type='text')
          
        div
          label Tus Apellidos:
          input.span3(name='user[lastname]', value=user.name || '', type='text')
          
        div
          input.btn-block.btn.btn-primary(type='submit', value='Registrate')
          a(href="/login") Volver
        
       